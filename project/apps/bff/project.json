{
  "name": "bff",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/bff/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/bff",
        "main": "apps/bff/src/main.ts",
        "tsConfig": "apps/bff/tsconfig.app.json",
        "assets": ["apps/bff/src/assets"],
        "isolatedConfig": true,
        "webpackConfig": "apps/bff/webpack.config.js",
        "generatePackageJson": true
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "buildImage": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run bff:build",
          "docker build --file ./apps/bff/Dockerfile --tag taskforce.bff:latest ."
        ]
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "bff:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "bff:build:development"
        },
        "production": {
          "buildTarget": "bff:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/bff/**/*.ts"]
      }
    }
  },
  "tags": []
}
